<Window x:Class="Text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center">Username</Label>
            <TextBox Height="30" Width="200" VerticalAlignment="Center" SpellCheck.IsEnabled="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True">

            </TextBox>
            <Label HorizontalAlignment="Center">Password</Label>
            <PasswordBox Height="30" Width="200" VerticalAlignment="Center" />
            
        </StackPanel>

    </Grid>
</Window>
